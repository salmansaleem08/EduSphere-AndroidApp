<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/edu_logo"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <!-- Get Started Text -->
        <TextView
            android:id="@+id/tv_get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Get Started"
            android:textColor="#333333"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Subtitle Text -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="by creating a free account"
            android:textColor="#666666"
            android:textSize="16sp" />

        <!-- Full Name Field -->
        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edit_text_bg"
            android:drawableEnd="@drawable/ic_person"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edit_text_bg"
            android:drawableEnd="@drawable/mail"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Phone Field -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edit_text_bg"
            android:drawableEnd="@drawable/ic_phone"
            android:hint="Enter Phone"
            android:inputType="phone"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Password Field -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <!-- Password Input -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_bg"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:paddingEnd="50dp"
                android:padding="15dp"
                android:textColorHint="#888888" />

            <!-- Clickable Eye Icon -->
            <ImageView
                android:id="@+id/iv_toggle_password"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/et_password"
                android:layout_alignEnd="@id/et_password"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/hide"
                android:contentDescription="Toggle password visibility"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>


        <!-- Terms Checkbox -->
        <CheckBox
            android:id="@+id/cb_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="By checking the box you agree to our terms and conditions"
            android:textColor="#666666"
            android:textSize="14sp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button_bg"
            android:backgroundTint="#1E1F22"
            android:padding="15dp"
            android:text="SIGN UP"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Login Link Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_already_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already a member "
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login?"
                android:textColor="#F5A623"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
